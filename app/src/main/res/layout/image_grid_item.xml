<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/image_heigh_width"
        android:layout_height="@dimen/image_heigh_width"
        android:layout_marginBottom="@dimen/image_margin"
        android:layout_marginLeft="@dimen/image_margin"
        android:layout_marginRight="@dimen/image_margin"
        android:layout_marginTop="@dimen/image_margin"
        android:src="@drawable/ic_launcher_background">
    </ImageView>

</LinearLayout>